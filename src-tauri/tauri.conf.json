{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Delta Widgets",
  "version": "0.1.1",
  "identifier": "com.delta-widgets.app",
  "mainBinaryName": "delta-widgets",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Delta Widgets",
        "width": 800,
        "height": 600,
        "visible": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "scope": ["$APPCACHE/**"],
        "enable": true
      }
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
