{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Delta Widgets",
  "version": "0.1.1",
  "identifier": "com.delta-widgets.app",
  "mainBinaryName": "delta-widgets",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Delta Widgets",
        "width": 800,
        "height": 600,
        "visible": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "scope": ["$APPCACHE/**"],
        "enable": true
      }
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRBRUZCNzU1MUZBOUNDNTQKUldSVXpLa2ZWYmZ2U2lBVW1jTVhIeEtLZFRQNnB2QmtsUVNQRnFqYlBrcmJrWlNLY0hDbGFLMDAK",
      "endpoints": [
        "https://github.com/amaan-mohib/delta-widgets/releases/latest/download/latest.json"
      ]
    }
  }
}
